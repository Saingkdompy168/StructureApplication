<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_tool_bar_center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingStart="@dimen/default_padding_dp"
    android:paddingEnd="@dimen/default_padding_dp">

    <ImageView
        android:id="@+id/imageToolbarIcon"
        android:layout_width="@dimen/action_bar_image_size"
        android:layout_height="@dimen/action_bar_image_size"
        android:background="@drawable/bg_round_corner_ripple"
        android:padding="2dp"
        android:src="@drawable/ic_circle_arrow_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,PxUsage" />

    <TextView
        android:id="@+id/textViewActionBarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:padding="5dp"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/action_bar_title_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageToolbarAction"
        android:layout_width="@dimen/action_bar_image_size"
        android:layout_height="@dimen/action_bar_image_size"
        android:background="@drawable/bg_round_corner_ripple"
        android:padding="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="PxUsage" />


</androidx.constraintlayout.widget.ConstraintLayout>